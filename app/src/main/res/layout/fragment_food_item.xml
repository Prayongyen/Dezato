<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="100dp" >
        <TextView android:id="@+id/food_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#000" android:layout_gravity="center" android:layout_marginLeft="5dp"/>
        <ImageView android:id="@+id/food_path" android:layout_width="90dp" android:layout_height="90dp" android:layout_gravity="left|top" android:layout_marginTop="7dp" android:layout_marginLeft="5dp"/>
        <Button style="?android:attr/buttonStyleSmall" android:layout_width="40dp" android:layout_height="38dp" android:text="+" android:id="@+id/addOrder" android:layout_gravity="right|center_vertical" android:layout_marginRight="25dp" android:textStyle="bold" android:textSize="25dp" android:background="#ff4081" android:textColor="#fff"/>
    </FrameLayout>
</LinearLayout>